<form action="/recipes/<%=@recipe.id%>" method="post">
  <input type="hidden" id="hidden" value="patch" name="_method">
  Recipe Name: <input type="text" id="recipe_name" value="<%=@recipe.name%>" name="name">
  Recipe Ingredients: <input type="text" id="ingredients_names" value="<%=@recipe.ingredients%>" name="ingredients">
  Cooking Time: <input type="text" id="cook_time" value="<%=@recipe.cook_time%>" name="cook_time">
  <input type="submit" value="submit">
</form>
